---
import Layout from '../../layouts/Layout.astro';

const allPosts = await Astro.glob("./releases/*.md");
---

<Layout title="Releases">
	<header id="releases">
		<h1>Releases</h1>
	</header>
	<main id="releases">
    <ul>
        {allPosts.map((post) => (
                <li>
                    <a href={post.url}>{post.frontmatter.title}</a>
                </li>
            ))}
    </ul>
    </main>
</Layout>